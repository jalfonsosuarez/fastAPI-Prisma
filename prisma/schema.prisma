datasource db {
    // could be postgresql or mysql
    provider = "sqlite"
    url      = "file:../data/data.db"
}

generator db {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

model User {
    id        String    @id @default(uuid())
    fullname  String
    email     String    @unique()
    role      String
    password  String
    is_active Boolean?  @default(true)
    createdAt DateTime? @default(now())
    updatedAt DateTime? @updatedAt
    deletedAt DateTime?
}

model Category {
    id          String    @id @default(uuid())
    description String
    products    Product[]
    is_active   Boolean?  @default(true)
    createdAt   DateTime? @default(now())
    updatedAt   DateTime? @updatedAt
    deletedAt   DateTime?
}

model Product {
    id          String    @id @default(uuid())
    name        String
    description String
    price       Float
    id_category String?
    category    Category? @relation(fields: [id_category], references: [id])
    is_active   Boolean?  @default(true)
    createdAt   DateTime? @default(now())
    updatedAt   DateTime? @updatedAt
    deletedAt   DateTime?
}
